<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Settings - StackBlog</title>
  <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
  <%- include('partials/header') %>
  <main>
    <section class="form-section">
  <div class="container">
    <h2>Settings</h2>
    
    <% if (errors && errors.length > 0) { %>
      <div class="error-box">
        <ul>
          <% errors.forEach(function(error) { %>
            <li><%= error %></li>
          <% }); %>
        </ul>
      </div>
    <% } %>

    <form method="POST" action="/settings">
      <div class="form-group">
        <label for="bio">Bio</label>
        <textarea id="bio" name="bio" rows="4"><%= user.bio || '' %></textarea>
        <p class="form-help">Tell people a bit about yourself (optional)</p>
      </div>

      <div class="form-group">
        <label class="checkbox-label">
          <input type="checkbox" name="isPrivate" <%= user.isPrivate ? 'checked' : '' %>>
          Make my account private
        </label>
        <p class="form-help">If your account is private, only you can see your posts on the feed</p>
      </div>

      <button type="submit" class="btn">Save Settings</button>
      <a href="/profile" class="btn btn-secondary">Cancel</a>
    </form>
  </div>
</section>
  </main>
  <%- include('partials/footer') %>
  <script src="/js/main.js"></script>
</body>
</html>

