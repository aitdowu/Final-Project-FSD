<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Register - StackBlog</title>
  <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
  <%- include('partials/header') %>
  <main>
    <section class="form-section">
  <div class="container">
    <h2>Sign Up</h2>
    
    <% if (errors && errors.length > 0) { %>
      <div class="error-box">
        <ul>
          <% errors.forEach(function(error) { %>
            <li><%= error %></li>
          <% }); %>
        </ul>
      </div>
    <% } %>

    <form method="POST" action="/auth/register" id="registerForm">
      <div class="form-group">
        <label for="username">Username</label>
        <input type="text" id="username" name="username" value="<%= formData.username || '' %>" required>
        <span class="error-message" id="username-error"></span>
      </div>

      <div class="form-group">
        <label for="email">Email</label>
        <input type="email" id="email" name="email" value="<%= formData.email || '' %>" required>
        <span class="error-message" id="email-error"></span>
      </div>

      <div class="form-group">
        <label for="password">Password</label>
        <input type="password" id="password" name="password" required>
        <span class="error-message" id="password-error"></span>
      </div>

      <button type="submit" class="btn">Sign Up</button>
    </form>

    <p class="form-footer">Already have an account? <a href="/auth/login">Log in here</a></p>
  </div>
</section>
  </main>
  <%- include('partials/footer') %>
  <script src="/js/main.js"></script>
</body>
</html>

