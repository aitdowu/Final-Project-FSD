<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= profileUser.username %>'s Profile - StackBlog</title>
  <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
  <%- include('partials/header') %>
  <main>
    <section class="profile">
  <div class="container">
    <h2><%= profileUser.username %>'s Profile</h2>
    
    <div class="profile-info">
      <div class="info-item">
        <strong>Bio:</strong> <%= profileUser.bio || 'No bio' %>
      </div>
      <div class="info-item">
        <strong>Member Since:</strong> <%= new Date(profileUser.createdAt).toLocaleDateString() %>
      </div>
      <div class="info-item">
        <strong>Total Posts:</strong> <%= postCount %>
      </div>
    </div>

    <div class="posts-section">
      <h3>Posts</h3>
      <% if (posts && posts.length > 0) { %>
        <div class="posts-list">
          <% posts.forEach(function(post) { %>
            <article class="post-card">
              <h3><%= post.title %></h3>
              <p class="post-meta"><%= new Date(post.createdAt).toLocaleDateString() %></p>
              <p class="post-content"><%= post.content %></p>
            </article>
          <% }); %>
        </div>
      <% } else { %>
        <p>No posts yet.</p>
      <% } %>
    </div>
  </div>
</section>
  </main>
  <%- include('partials/footer') %>
  <script src="/js/main.js"></script>
</body>
</html>

